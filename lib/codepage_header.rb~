# encoding: ascii-8bit

# Conversion between UTF-8 and the encoding used by the header of the 
# EBU-STL format.
# See http://tech.ebu.ch/docs/tech/tech3264.pdf

module EbuStl
    module CodePage
        module Header
            # Unit mapping, the part of UTF-8 that is ASCII.
            UTF8 = Array.new(0x80) { |i| i }
            UTF8.map! { |i| (i<= 0x1f) ? nil : i}
            UTF8.delete_if { |i| i && i >= 0x7f}
        end
    end
end

require_relative 'codepage_header_cpbase.rb'
require_relative 'codepage_header_cp437.rb'
require_relative 'codepage_header_cp850.rb'
require_relative 'codepage_header_cp860.rb'
require_relative 'codepage_header_cp863.rb'
require_relative 'codepage_header_cp865.rb'
